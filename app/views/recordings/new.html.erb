<h1>Upload recording</h1>

<%= form_with model: @recording, url: [:recordings], data: { remote: false } do |form| %>
  <div class="col-lg-12 col-sm-12">
    <div class="form-group">
      <%= form.label :title, 'Title' %>
      <%= form.text_field :title, class: 'form-control' %>
      <%= error_message_on form.object, :title %>
    </div>
    
    <div class="form-group">
      <%= form.label :audio_file, 'Upload audio file' %>
      <%= form.file_field :audio_file, class: 'form-control' %>
      <%= error_message_on form.object, :audio_file %>
    </div>
  </div>


  <div class="form-group">
    <%= form.submit 'Save', class: 'btn btn-primary', data: { disable_with: 'Saving...' } %>
    <%= link_to 'Cancel', root_path(), class: 'btn btn-primary' %>
  </div>
<% end %>