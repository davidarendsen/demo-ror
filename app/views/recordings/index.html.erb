<h1>Recordings</h1>

<% if user_signed_in? %>
  <p><%= link_to 'New', new_recording_path, class: 'btn btn-primary' %></p>
<% end %>

<table class="table table-striped">
  <thead>
    <th>Subject</th>
    <th>Duration</th>
  </thead>
  <tbody>
    <% cache ['v1', @recordings] do %>
      <% if @recordings.any? %>
        <% @recordings.each do |recording| %>
          <%= render recording %>
        <% end %>
      <% end %>
    <% end %>
  </tbody>
</table>
